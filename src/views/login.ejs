<%- include('includes/head'); %>
<%- include('includes/nav'); %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center my3">Criar conta ou entrar</h1>
          <p class="text-center lead">faça login ou crie sua conta abaixo</p>

          <%- include('includes/messages') %>

          <div class="row">

            <div class="col-lg my-5">
              <h4>Faça seu cadastro</h4>
              <p>Se você ainda não tem uma conta, preencha o formulario abaixo:</p>

              <form class="form-cadastro" action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <form>
                <div class="form-group">
                  <label for="exampleInputEmail1">Seu Email</label>
                  <input type="email" class="form-control" name = "email" placeholder="Email">
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Sua senha</label>
                  <input type="password" class="form-control" name ="senha" placeholder="Password">
                </div>
                <div class="form-check">
                </div>
                <button type="submit" class="btn btn-primary">Criar minha conta</button>
              </form>

            </div>

            <div class="col-lg my-5">
              <h4>Entrar no Sistema</h4>
              <P>Se você já tem uma conta, faça login abaixo:</P>
              
              <form class="form-login" action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <form>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Seu Email</label>
                    <input type="email" class="form-control" name = "email" placeholder="Email">
                  </div>
                  <div class="form-group">
                    <label for="exampleInputPassword1">Sua senha</label>
                    <input type="password" class="form-control" name="senha" placeholder="Password">
                  </div>
                  <div class="form-check">
                  </div>
                  <button type="submit" class="btn btn-primary">Entrar</button>
                </form>

            </div>

          </div>

        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>
   

<%- include('includes/footer'); %>